<%- include('../partials/header') %>

<form action="/todos/<%= todo.id %>?_method=PUT" method="POST" autocomplete="off">
  <input type="text" name="todo" value="<%= todo.todo %>"><br>
  <label>
    Completed
    <input type="checkbox" name="done" <%= todo.done ? 'checked' : '' %>>
  </label><br>
  <button class="button-52" role="button" type ="submit">Update To-Do</button>
</form>

